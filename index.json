{
  "$schema": "http://json.schemastore.org/prettierrc",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "requirePragma": false,
        "insertPragma": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "avoid"
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2,
        "singleQuote": false,
        "bracketSpacing": true
      }
    }
  ]
}
